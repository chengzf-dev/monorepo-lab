{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "npmClient": "pnpm",
  "version": "independent",
  "packages": [
    "packages/*",
    "apps/*"
  ],
  "ignoreChanges": [
    "**/node_modules",
    "**/dist",
    "**/build"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "[skip ci] chore release"
    }
  }
}
